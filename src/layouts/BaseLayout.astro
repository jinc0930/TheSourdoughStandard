---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Sourdough Sensei',
  description = 'Fast, simple lessons for mastering sourdough.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <div class="background-wrapper">
      <div class="container">
        <nav class="nav">
          <div class="brand">Sourdough Sensei</div>
          <div class="nav-links">
            <a href="/">Home</a>
            <a href="/lessons">Lessons</a>
          </div>
        </nav>

        <main class="main-content">
          <slot />
        </main>

        <footer class="footer">
          © {new Date().getFullYear()} The Sourdough Standard · Built with Astro
        </footer>
      </div>
    </div>
  </body>

  <style>
    html, body {
      margin: 0;
      padding: 0;
      min-height: 100%;
    }

    /* Background wrapper with bread image */
    .background-wrapper {
      position: relative;
      min-height: 100vh;
      background: transparent;
      z-index: 0;
    }

    .background-wrapper::after {
      content: "";
      position: fixed;
      inset: 0;
      background: url('/img.png') no-repeat bottom right / 280px;
      opacity: 0.12;
      transform: rotate(-8deg);
      transform-origin: center;
      pointer-events: none;
      z-index: -1;
    }

    .container {
      max-width: 960px;
      margin: 0 auto;
      padding: 2rem 1rem; /* restored breathing room */
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    /* Nav section */
    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .brand {
      font-weight: 700;
      font-size: 1.25rem;
    }

    .nav-links {
      display: flex;
      gap: 1rem;
    }

    /* Main content spacing */
    .main-content {
      flex: 1;
    }

    /* Footer placement + spacing */
    .footer {
      margin-top: 3rem;
      padding-top: 1rem;
      text-align: center;
      font-size: 0.875rem;
    }
  </style>
</html>
